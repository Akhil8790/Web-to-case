<script>
function toggleFields() {
  const type = document.getElementById("formType").value;
  const email = document.getElementById("emailField");
 
  if (type === "Bug Report") {
    document.getElementById("productGroup").style.display = "none";
    document.getElementById("usernameGroup").style.display = "none";
    document.getElementById("emailGroup").style.display = "none";
 
    email.required = false;
 
  } else if(type === "Handshakes Datamart Query"){
    document.getElementById("productGroup").style.display = "none";
 
  }else if(type === "Handshakes KYB Trail"){
    document.getElementById("productGroup").style.display = "none";
  }else {
    // Show everything for Support / Datamart / KYB Trail
    document.getElementById("productGroup").style.display = "";
    document.getElementById("usernameGroup").style.display = "";
    document.getElementById("emailGroup").style.display = "";
    email.required = true;
  }
}
toggleFields();
</script>
 
